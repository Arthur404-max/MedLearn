{
  "apps": [
    {
      "name": "medlearn-api",
      "script": "dist/server.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3000
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "error_file": "logs/pm2/error.log",
      "out_file": "logs/pm2/out.log",
      "log_file": "logs/pm2/combined.log",
      "time": true,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "500M",
      "min_uptime": "10s",
      "max_restarts": 10,
      "restart_delay": 4000,
      "kill_timeout": 5000,
      "wait_ready": true,
      "listen_timeout": 10000,
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "instance_var": "INSTANCE_ID",
      "combine_logs": true,
      "source_map_support": true
    },
    {
      "name": "medlearn-worker",
      "script": "dist/workers/background-tasks.js",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production",
        "WORKER_TYPE": "background"
      },
      "env_development": {
        "NODE_ENV": "development",
        "WORKER_TYPE": "background"
      },
      "cron_restart": "0 2 * * *",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "200M"
    }
  ]
}